{
  "manifest_version": 3,
  "name": "Abitti Exam Assessor",
  "version": "1.1",
  "description": "A browser extension to assist in assessing Abitti exam results.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/exam-api/grading/results/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon.png"
  }
}
